---
import Layout from "../../layouts/Layout.astro";
import Picture from "astro/components/Picture.astro";
import {ActiviteById} from "../../js/backend.mjs";
const { id } = Astro.params;
const activite = await ActiviteById( id )
if (!activite){
    return Astro.redirect('/activites')
}
---

<Layout >
    <div>
    <div class="max-w-3xl mx-auto bg-white p-6 rounded-lg shadow-md m-30">
        <Picture
          pictureAttributes={{ class: "w-full h-full object-cover" }}
          inferSize={true}
          src={`http://127.0.0.1:8090/api/files/${activite.collectionId}/${activite.id}/${activite.Affiche}`}
          alt=""
        />
        <p class="text-gray-600 text-sm mb-2">
            <strong>{activite.Titre}</strong>
        </p>
        <p class="text-gray-600 text-sm mb-2">
            <span class="font-semibold">Organisateur&nbsp;:</span>{activite.Organisateur}
        </p>
        <p class="text-gray-600 text-sm mb-2">
            <span class="font-semibold">Description&nbsp;:</span>{activite.Description}
        </p>
        <p class="text-gray-600 text-sm mb-2">
            <span class="font-semibold">Date&nbsp;:</span>{activite.Date}
        </p>
      </div>
    </div>
      
    
</Layout>